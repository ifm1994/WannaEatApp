<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card1"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/star_container"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/restaurant_kind_of_food"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/star_5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:tint="@color/black"
                card_view:srcCompat="@drawable/ic_action_star_empty"
                android:layout_alignParentRight="true" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/star_3"
                android:tint="@color/black"
                card_view:srcCompat="@drawable/ic_action_star_empty" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:tint="@color/black"
                card_view:srcCompat="@drawable/ic_action_star_empty" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/black"
                card_view:srcCompat="@drawable/ic_action_star_empty" />

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/star_2"
                android:tint="@color/black"
                card_view:srcCompat="@drawable/ic_action_star_empty"
                android:layout_toRightOf="@+id/star_2" />

        </RelativeLayout>

        <TextView
            android:id="@+id/restaurant_kind_of_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/restaurant_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:background="#8c000000"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                tools:ignore="ObsoleteLayoutParam" />

        </FrameLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>